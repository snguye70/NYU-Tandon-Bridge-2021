// HW4_Q1.cpp : This file contains the 'main' function. Program execution begins and ends there.
// Write two versions of a program that reads a positive integer n, and prints the first n even numbers.
// a) In the first, use a while loop.
// b) In the second, use a for loop.

#include <iostream>
using namespace std;


int main()
{
	int n, evenNum;
	int counter = 1;
	
	// Prompt user for value, n
	cout << "Please enter a positive integer: ";
	cin >> n;

	cout << endl << "Part A: " << endl;
	
	// part A: WHILE LOOP. read positive interger, print even numbers 
	while (counter <= n) {
		evenNum = counter * 2;
		cout << evenNum << endl;
		counter++;
	}
	// part B: FOR LOOP. read positive interger, print even numbers 
	cout << endl << "Part B: " << endl;
	for (int i = 1; i <= n; i++) {
		evenNum = i * 2;
		cout << evenNum << endl;
	}
}
